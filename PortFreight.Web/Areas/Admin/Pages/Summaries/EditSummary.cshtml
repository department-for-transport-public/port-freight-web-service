@page
@model EditSummaryModel
@{
}
<main id="main" tabindex="-1">
    <div class="govuk-main-wrapper">

        <div class="govuk-back-link">
            <a class="govuk-link" asp-page="/Summaries/ViewSummary">Back</a>
        </div>
       
        <div class="govuk-grid-row">
            <div class="govuk-grid-column-two-thirds">
                <form method="post">
                    <div class="govuk-form-group">
                        <label class="govuk-label">Category Code</label>
                        <span asp-validation-for="CategoryCode" class="govuk-error-message"></span>
                        <input class="govuk-input" asp-for="CategoryCode" value="@Model.CargoSummary.CategoryCode" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label">Units With Cargo</label>
                        <input type="number" class="govuk-input" asp-for="UnitsWithCargo" value="@Model.CargoSummary.UnitsWithCargo" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label">Units Without Cargo</label>
                        <input type="number" class="govuk-input" asp-for="UnitsWithoutCargo" value="@Model.CargoSummary.UnitsWithoutCargo" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label">Total Units</label>
                        <input type="number" class="govuk-input" asp-for="TotalUnits" value="@Model.CargoSummary.TotalUnits" />
                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label">Gross Weight</label>
                        <span class="govuk-error-message" asp-validation-for="GrossWeight"></span>
                        <input class="govuk-input" asp-for="GrossWeight" value="@Model.CargoSummary.GrossWeight" />

                    </div>
                    <div class="govuk-form-group">
                        <label class="govuk-label">Description</label>
                        <input class="govuk-input" asp-for="Description" value="@Model.CargoSummary.Description" />
                    </div>
                    <div class="govuk-form-group">
                        <button type="submit" class="govuk-button">Save</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>