@page
@model PortFreight.Web.Areas.Admin.Pages.GlobalPort.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<main id="main" tabindex="-1">
    <div class="govuk-body">
        <div class="govuk-back-link">
            <a class="govuk-link" asp-page="Index">Back</a>
        </div>
        <div class="govuk-main-wrapper">
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-full">
                    <h1 class="govuk-heading-m">Delete</h1>
                    <div class="govuk-form-group">
                        <h2 class="govuk-heading-xl">Are you sure you want to delete this?</h2>
                    </div>
                </div>
            </div>
            <div class="govuk-grid-row">
                <div class="govuk-grid-column-two-thirds">
                    <div class="govuk-form-group">
                        <span asp= class="govuk-error-message"></span>
                        <span class="govuk-error-message">@Html.ValidationMessage("CustomError")</span>
                    </div>
                    <dl class="govuk-summary-list govuk-!-margin-bottom-9">
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                PortName
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.PortName)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Locode
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.Locode)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Locode
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.StatisticalPort)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                Country code
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.CountryCode)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD1 Load/Unload
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd1LoadUnload)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD1 Reporting port
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd1ReportingPort)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD2
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd2)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD3
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd3)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD4
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd4)
                            </dd>
                        </div>
                        <div class="govuk-summary-list__row">
                            <dt class="govuk-summary-list__key">
                                MSD5
                            </dt>
                            <dd class="govuk-summary-list__value">
                                @Html.DisplayFor(model => model.GlobalPort.ForMsd5)
                            </dd>
                        </div>
                    </dl>
                    <div class="govuk-form-group">
                        <form method="post">
                            <input type="hidden" asp-for="GlobalPort.Locode" asp-route-id="GlobalPort.Locode"/>
                            <input type="submit" value="Delete" class="govuk-button" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>
