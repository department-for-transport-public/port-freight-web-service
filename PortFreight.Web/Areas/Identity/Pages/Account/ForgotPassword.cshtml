@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgotten your password?";
}
<main id="main" tabindex="-1">
<a class="govuk-link" asp-page="Login">Back</a>
<div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                @ViewData["Title"]
            </h1>
            <form method="post">
                @await Html.PartialAsync("_ErrorSummary")
                <p class="govuk-body">
                    Enter your email address to reset your password
                </p>

                <div class="govuk-form-group">
                    <label asp-for="Input.Email" class="govuk-label"></label>
                    <span asp-validation-for="@Model.Input.Email" class="govuk-error-message"></span>
                    <input asp-for="Input.Email" id="Input_Email" class="govuk-input" autocomplete="email" />
                </div>
                <div class="govuk-form-group">
                    <button type="submit" class="govuk-button">Submit</button>
                </div>

            </form>
        </div>
    </div>
</div>
</main>