@page
@model PreRegisterModel
@{
    ViewData["Title"] = "Create an account";
}
<main id="main" tabindex="-1">
<a class="govuk-link" asp-page="/Index">Back</a>
<div class="govuk-main-wrapper">
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <h1 class="govuk-heading-l">
                @ViewData["Title"]
            </h1>
            <form  method="post">
                <partial name="_ErrorSummary" />

                <div class="govuk-form-group">
                    @if (ViewData.ModelState.ContainsKey("CheckDetailsEntered"))
                    {
                        <span id="CheckDetailsEntered" tabindex="-1" class="govuk-error-message">
                            @Html.ValidationMessage("CheckDetailsEntered").
                        </span>
                    }
                    <label asp-for="Input.Email" class="govuk-label"></label>
                    <span id ="email-address-hint" class="govuk-hint">Enter your individual email address</span>
                    <span asp-validation-for="Input.Email" class="govuk-error-message"></span>
                    @if (ViewData.ModelState.ContainsKey("EmailAlreadyRegistered"))
                    {
                        <span id="EmailAlreadyRegistered" tabindex="-1" class="govuk-error-message">
                            @Html.ValidationMessage("EmailAlreadyRegistered"). <a class="govuk-link" asp-page="Login">Go to login screen</a>
                        </span>
                    }

                    <input asp-for="Input.Email" id="Input_Email" class="govuk-input govuk-input--width-20" aria-describedby="email-address-hint" autocomplete="email"/>
                </div>

                <div class="govuk-form-group">
                    <label asp-for="Input.SenderId" class="govuk-label"></label>
                    <span id="multiple-senderid-hint" class="govuk-hint">
                        If you use more than one Sender ID, choose the one you use most frequently
                    </span>
                    <span asp-validation-for="Input.SenderId" class="govuk-error-message"></span>
                    <input asp-for="Input.SenderId" id="Input_SenderId" class="govuk-input govuk-input--width-10" aria-describedby="multiple-senderid-hint"/>
                </div>

                <div class="govuk-form-group">
                    <button type="submit" class="govuk-button">Next</button>
                </div>

            </form>
        </div>
    </div>
</div>
</main>